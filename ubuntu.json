{
  "builders": [
    {
      "type": "qemu",
      "name": "qemu",
      "use_default_display": "true",
      "boot_command": [
        "<wait>c<wait>set gfxpayload=keep<enter><wait>linux /casper/vmlinuz quiet autoinstall ds=nocloud-net\\;s=http://{{.HTTPIP}}:{{.HTTPPort}}/ ---<enter><wait>initrd /casper/initrd<wait><enter><wait>boot<enter><wait>"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "boot_key_interval": "10ms",
      "disk_interface": "virtio-scsi",
      "disk_size": "{{ user `disk_size` }}",
      "format": "raw",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "http_port_max": "{{user `http_port_max`}}",
      "http_port_min": "{{user `http_port_min`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "net_device": "virtio-net",
      "output_directory": "target-qemu",
      "qemuargs": [
        [
          "-m",
          "{{ user `memory_size` }}m"
        ],
        [
          "-smp",
          "cpus={{ user `cpus` }},maxcpus=16,cores=4"
        ]
      ],
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "vm_name": "{{user `vm_name`}}",
      "vnc_port_min": "{{user `vnc_vrdp_port`}}",
      "vnc_port_max": "{{user `vnc_vrdp_port`}}",
      "vnc_bind_address": "{{user `vnc_vrdp_bind_address`}}"
    },
    {
      "type": "vagrant",
      "name": "vbox",
      "communicator": "ssh",
      "source_path": "https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64-vagrant.box",
      "checksum": "file:https://cloud-images.ubuntu.com/jammy/current/SHA256SUMS",
      "provider": "virtualbox",
      "add_force": true,
      "output_dir": "target-vbox"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "cloud.cfg",
      "destination": "/tmp/cloud.cfg",
      "only": [
        "qemu"
      ]
    },
    {
      "scripts": [
        "scripts/packages.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/packagesQEMU.sh"
      ],
      "type": "shell",
      "only": [
        "qemu"
      ]
    },
    {
      "scripts": [
        "scripts/packagesVBox.sh"
      ],
      "type": "shell",
      "only": [
        "vbox"
      ]
    },
    {
      "scripts": [
        "scripts/fixes.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
  ],
  "variables": {
    "boot_wait": "20s",
    "cpus": "4",
    "disk_size": "16384",
    "headless": "true",
    "http_directory": "http",
    "http_port_max": "10089",
    "http_port_min": "10082",
    "iso_checksum": "5e38b55d57d94ff029719342357325ed3bda38fa80054f9330dc789cd2d43931",
    "iso_url": "https://www.releases.ubuntu.com/jammy/ubuntu-22.04.2-live-server-amd64.iso",
    "memory_size": "4096",
    "shutdown_command": "shutdown -P now",
    "ssh_password": "toor",
    "ssh_port": "22",
    "ssh_username": "root",
    "ssh_wait_timeout": "90m",
    "vm_name": "ubuntu",
    "vnc_vrdp_bind_address": "127.0.0.1",
    "vnc_vrdp_port": "5900"
  }
}
