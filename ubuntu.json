{
  "variables": {
    "boot_wait": "10s",
    "cpus": "4",
    "disk_size": "16384",
    "headless": "true",
    "http_directory": "http",
    "http_port_max": "10089",
    "http_port_min": "10082",
    "iso_checksum": "5e38b55d57d94ff029719342357325ed3bda38fa80054f9330dc789cd2d43931",
    "iso_url": "https://www.releases.ubuntu.com/jammy/ubuntu-22.04.2-live-server-amd64.iso",
    "memory_size": "2048", 
    "shutdown_command": "shutdown -P now",
    "ssh_password": "vagrant",
    "ssh_port": "22",
    "ssh_username": "vagrant",
    "ssh_wait_timeout": "90m",
    "vm_name": "xubuntu",
    "vnc_vrdp_bind_address": "127.0.0.1",
    "vnc_vrdp_port": "5900"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "vbox",
      "boot_command": [
        "<esc><esc><esc>",
        "c<wait>",
        "set gfxpayload=keep<enter><wait>",
        "linux /casper/vmlinuz <wait>",
        "autoinstall <wait>",
        "ds=\"nocloud-net;s=http://{{.HTTPIP}}:{{.HTTPPort}}/\" <wait>",
        "---<enter><wait>",
        "initrd /casper/initrd<enter><wait>",
        "boot<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": 16384,
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "http_directory": "http",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "sha256:{{ user `iso_checksum` }}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_read_write_timeout": "600s",
      "ssh_timeout": "120m",
      "ssh_wait_timeout": "120m",
      "ssh_handshake_attempts": "5",
      "shutdown_command": "sudo systemctl poweroff",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "ubuntu2204",
      "output_filename": "vagrant",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "8192"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nat-localhostreachable1",
          "on"
        ]
      ]
    },
    {
      "type": "qemu",
      "name": "qemu",
      "use_default_display": "true",
      "boot_command" : [
        "<wait>c<wait>set gfxpayload=keep<enter><wait>linux /casper/vmlinuz quiet autoinstall ds=nocloud-net\\;s=http://{{.HTTPIP}}:{{.HTTPPort}}/ ---<enter><wait>initrd /casper/initrd<wait><enter><wait>boot<enter>"
      ],
      "accelerator": "hvf",
      "boot_wait": "{{user `boot_wait`}}",
      "boot_key_interval": "100ms",
      "disk_interface": "virtio-scsi",
      "disk_size": "{{ user `disk_size` }}",
      "format": "raw",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "http_port_max": "{{user `http_port_max`}}",
      "http_port_min": "{{user `http_port_min`}}",
      "iso_checksum": "sha256:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "net_device": "virtio-net",
      "output_directory": "target-qemu",
      "qemuargs": [
        [
          "-m",
          "{{ user `memory_size` }}m"
        ],
        [
          "-smp",
          "cpus={{ user `cpus` }},maxcpus=16,cores=4"
        ]
      ],  
      "shutdown_command": "sudo systemctl poweroff",
      "ssh_password": "vagrant",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "vm_name": "{{user `vm_name`}}",
      "vnc_port_min": "{{user `vnc_vrdp_port`}}",
      "vnc_port_max": "{{user `vnc_vrdp_port`}}",
      "vnc_bind_address": "{{user `vnc_vrdp_bind_address`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo python3 -m pip install ansible=={{ user `ansible_version` }}"
      ],
      "only": [
        "vbox"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "touch ~/hello-world"
      ],
      "only": [
        "qemu"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/install.yml",
      "extra_arguments": [
        "--extra-vars",
        "\"box_version={{ user `box_version` }} vboxadd_version={{ user `vboxadd_version` }}\""
      ],
      "only": [
        "vbox"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "{{template_dir}}/scripts/whiteout.sh"
      ],
      "only": [
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "build/ubuntu2204.box",
        "compression_level": 9,
        "only": [
          "vbox"
        ]
      }
    ]
  ]
}
